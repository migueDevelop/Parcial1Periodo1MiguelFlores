@model IEnumerable<MiParcialito.Models.Materia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Materias y Docentes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Materia</th>
            <th>Docente</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var materia in Model)
        {
            <tr>
                <td>@materia.MateriaName</td>
                <td>@(materia.Docente?.DocenteName ?? "Sin docente asignado")</td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.DocenteError != null)
{
    <div class="alert alert-danger">@ViewBag.DocenteError</div>
}

<h2>Agregar Materia</h2>

<form asp-controller="Admin" asp-action="AddMateria" method="post">
    <div class="form-group">
        <label for="materiaName">Nombre de la Materia:</label>
        <input type="text" id="materiaName" name="materiaName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="docenteName">Docente:</label>
        <input type="text" id="docenteName" name="docenteName" class="form-control" />
    </div>
    </br>
    <button type="submit" class="btn btn-primary">Agregar Materia</button>
    </br>
</form>
</br>
<h2>Agregar Docente</h2>

<form asp-controller="Admin" asp-action="AddDocente" method="post">
    <div class="form-group">
        <label for="docenteName">Nombre del Docente:</label>
        <input type="text" id="docenteName" name="docenteName" class="form-control" required />
    </div>
    </br>
    <button type="submit" class="btn btn-primary">Agregar Docente</button>
    </br>
</form>
